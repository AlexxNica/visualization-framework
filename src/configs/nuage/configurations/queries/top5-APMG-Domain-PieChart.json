{
    "id":"top5-APMG-Domain-PieChart",
    "title":"TBD",
    "service":"elasticsearch",
    "query":{
        "size":0,
        "query":{
            "bool":{
                "must":[
                    {
                        "range":{
                            "timestamp":{
                                "gte":"now-24h",
                                "lte":"now",
                                "format":"epoch_millis"
                            }
                        }
                    }
                ]
            }
        },
        "aggs":{
            "3":{
                "filters":{
                    "filters":{
                        "Domain":{
                            "query":{
                                "term":{
                                    "DomainName":"test_org"
                                }
                            }
                        }
                    }
                },
                "aggs":{
                    "Sum of MB":{
                        "sum":{
                            "field":"TotalMB"
                        }
                    },
                    "APMGroup":{
                        "terms":{
                            "field":"APMGroup",
                            "size":5,
                            "order":{
                                "Sum of MB":"desc"
                            }
                        },
                        "aggs":{
                            "Sum of MB":{
                                "sum":{
                                    "field":"TotalMB"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
