{
    "id":"top5-talkers-download-nsg",
    "title":"TBD",
    "service":"elasticsearch",
    "query":{
        "size":0,
        "query":{
            "bool":{
                "must":[
                    {
                        "range":{
                            "timestamp":{
                                "gte":"now-24h",
                                "lte":"now",
                                "format":"epoch_millis"
                            }
                        }
                    }
                ]
            }
        },
        "aggs":{
            "5":{
                "filters":{
                    "filters":{
                        "DestinationNSG":{
                            "query":{
                                "term":{
                                    "DestinationNSG":"ovs-1"
                                }
                            }
                        }
                    }
                },
                "aggs":{
                    "4":{
                        "terms":{
                            "field":"SrcIp",
                            "size":5,
                            "order":{
                                "1":"desc"
                            }
                        },
                        "aggs":{
                            "1":{
                                "sum":{
                                    "field":"TotalPacketsCount"
                                }
                            },
                            "2":{
                                "sum":{
                                    "field":"TotalBytesCount"
                                }
                            },
                            "3":{
                                "sum":{
                                    "field":"TotalMB"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
