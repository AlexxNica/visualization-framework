{
    "id":"vss-domain-traffic-top-spg",
    "title":"Top Source PG by Count",
    "service":"elasticsearch",
    "query":{
        "index":"{{index:nuage_flow}}",
        "type":"{{type:nuage_doc_type}}",
        "body":{
            "size":0,
            "query":{
                "bool":{
                    "must":[
                        {
                            "range":{
                                "timestamp":{
                                    "gte":"{{startTime:now-24h}}",
                                    "lte":"{{endTime:now}}",
                                    "format":"epoch_millis"
                                }
                            }
                        }
                    ]
                }
            },
            "aggs": {
                "2": {
                    "filters":{
                        "filters":{
                            "Domain":{
                                "query":{
                                    "term":{
                                        "nuage_metadata.domainName":"{{domainName:chord_domain}}"
                                    }
                                }
                            }
                        }
                    },
                    "aggs": {
                      "5": {
                        "filters": {
                          "filters": {
                            "Type": {
                              "query": {
                                "term": {
                                  "type": "{{type:DENY}}"
                                }
                              }
                            }
                          }
                        },
                        "aggs": {
                        "3": {
                            "terms": {
                                "field": "nuage_metadata.destinationpolicygroups",
                                "size": 5,
                                "order": {
                                    "SumOf": "desc"
                                }
                            },
                            "aggs": {
                                "SumOf": {
                                    "sum": {
                                        "field": "packets"
                                    }
                                }
                            }
                        }
                        }
                      }
                    }
                }
            }
        }
    }
}
