{
    "id":"vss-domain-flow",
    "title":"Flows per Domain",
    "service":"elasticsearch",
    "query":{
        "index":"{{index:nuage_flow}}",
        "type":"{{type:nuage_doc_type}}",
        "body":{
            "size":0,
            "query":{
                "bool":{
                    "must":[
                        {
                            "range":{
                                "timestamp":{
                                    "gte":"{{startTime:now-24h}}",
                                    "lte":"{{endTime:now}}",
                                    "format":"epoch_millis"
                                }
                            }
                        }
                    ]
                }
            },
            "aggs": {
                "2": {
                    "filters":{
                        "filters":{
                            "Domain":{
                                "query":{
                                    "term":{
                                        "nuage_metadata.domainName":"{{domainName:chord_domain}}"
                                    }
                                }
                            }
                        }
                    },
                    "aggs": {
                        "spg": {
                            "terms": {
                                "field": "nuage_metadata.sourcepolicygroups",
                                "size": 5,
                                "order": {
                                    "SumOf": "desc"
                                }   
                            },
                            "aggs": {
                                "SumOf": {
                                    "sum": {
                                        "field": "packets"
                                    }
                                },
                                "dpg": {
                                    "terms": {
                                        "field": "nuage_metadata.destinationpolicygroups",
                                        "size": 5,
                                        "order": {
                                            "SumOf": "desc"
                                        }
                                    },
                                    "aggs": {
                                        "SumOf": {
                                            "sum": {
                                                "field": "packets"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
