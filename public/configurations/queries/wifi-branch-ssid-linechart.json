{
    "id":"wifi-branch-ssid-linechart",
    "title":"TBD",
    "service":"elasticsearch",
    "query":{
        "index":"{{index:nuage_wifi}}",
        "type":"{{type:nuage_doc_type}}",
        "body":{
            "size":0,
            "query":{
                "bool":{
                    "must":[
                        {
                            "range":{
                                "timestamp":{
                                    "gte":"{{startTime:now-24h}}",
                                    "lte":"{{endTime:now}}",
                                    "format":"epoch_millis"
                                }
                            }
                        }
                    ]
                }
            },
            "aggs":{
                "5":{
                    "filters":{
                        "filters":{
                            "SSID":{
                                "query":{
                                    "term":{
                                        "ssid":"{{SSID}}"
                                    }
                                }
                            }
                        }
                    },
                    "aggs": {
                        "ts": {
                            "date_histogram": {
                                "field": "timestamp",
                                "interval": "{{interval:1h}}"
                            },
                            "aggs": {
                                "Users": {
                                    "terms": {
                                        "field": "username",
                                        "size": 0,
                                        "order": {
                                            "SumOf": "desc"
                                        }
                                    },
                                    "aggs": {
                                        "SumOf": {
                                            "sum": {
                                                "field": "rx_bytes"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
